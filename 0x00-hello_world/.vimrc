" Set file type detection on
filetype on

" Set auto-indentation on
set autoindent

" Set tab width to 8 spaces
set tabstop=8
set shiftwidth=8

" Set no expand tab
set noexpandtab

" Set text width to 80 columns
set textwidth=80

" Enable syntax highlighting
syntax on

" Set color scheme to elflord
colorscheme elflord
